<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProductAddFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C8C8C8">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/main_color"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/productAddProductTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/adlam_display"
                android:text="Add Product"
                android:textColor="#F5F5F5"
                android:textSize="34sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Scrollable form -->
        <ScrollView
            android:id="@+id/formScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#C8C8C8"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintBottom_toTopOf="@+id/saveProduct"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="9dp"
                android:paddingBottom="24dp">

                <!-- All your input fields here -->

                <TextView
                     android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/productNameText"
                    style="@style/txtProductAddStyle"
                    android:text="Name" />

                <EditText
                    android:id="@+id/productNameEditText"
                    style="@style/editTxtProductAddStyle"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content" />

                <TextView
                     android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/productDescriptionText"
                    style="@style/txtProductAddStyle"
                    android:text="Description" />

                <EditText
                    android:id="@+id/productDescriptionEditText"
                    style="@style/editTxtProductAddStyle"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:minHeight="158dp"
                    android:paddingTop="10dp" />

                <TextView
                     android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/productCategoryText"
                    style="@style/txtProductAddStyle"
                    android:text="Category" />

                <EditText
                    android:id="@+id/productCategoryEditText"
                    style="@style/editTxtProductAddStyle"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content" />

                <TextView
                     android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/productPriceText"
                    style="@style/txtProductAddStyle"
                    android:text="Price" />

                <EditText
                    android:id="@+id/productPriceEditText"
                    style="@style/editTxtProductAddStyle"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/productItemCodeText"
                    style="@style/txtProductAddStyle"
                    android:text="Item Code" />

                <EditText
                    android:id="@+id/productItemCodeEditText"
                    style="@style/editTxtProductAddStyle"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content" />

                <TextView
                     android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/productStockSizeText"
                    style="@style/txtProductAddStyle"
                    android:text="Stock Size (Quantity)" />

                <EditText
                    android:id="@+id/productSotckSizeEditText"
                    style="@style/editTxtProductAddStyle"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    tools:ignore="TextFields" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginTop="23dp"
                    android:clickable="true"
                    android:contentDescription="Selected Image"
                    android:focusable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/product_add_img_2" />

            </LinearLayout>
        </ScrollView>

        <!-- Fixed Save Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveProduct"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/product_add_save_btn_bg"
            android:text="Save Product"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
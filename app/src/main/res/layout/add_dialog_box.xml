<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/add_dialog_box_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/addDialogText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Item"
            android:textColor="#fff"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:textStyle="bold"
            android:textSize="34sp"/>

        <EditText
            android:id="@+id/addDialogEditText"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:minHeight="48dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/add_dialog_box_input_bg"
            android:hint="Item Name"
            android:paddingStart="7dp"
            android:layout_marginTop="18dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addDialogBtn"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="38dp"
            android:text="Add"
            android:textColor="#fff"
            android:background="@drawable/product_add_save_btn_bg"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>